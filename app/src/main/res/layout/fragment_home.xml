<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_panel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_first_album_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_panel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_mike"
            app:layout_constraintEnd_toStartOf="@id/home_panel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="@id/home_panel_btn_setting_iv" />

        <ImageView
            android:id="@+id/home_panel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintEnd_toStartOf="@id/home_panel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="@id/home_panel_btn_setting_iv" />

        <ImageView
            android:id="@+id/home_panel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_main_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_panel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="포근하게 덮어주는 꿈의\n목소리"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_panel_btn_nugu_iv" />

        <ImageView
            android:id="@+id/home_panel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_panel_play_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_panel_title_tv" />

        <TextView
            android:id="@+id/home_panel_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:text="총 15곡 2019.11.11"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/home_panel_album_img_iv"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/home_panel_album_img_iv1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toBottomOf="@id/home_panel_background_iv"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/home_panel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toTopOf="@id/home_panel_album_img_iv1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_panel_album_title_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="잠이 안온다"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/home_panel_album_singer_tv2"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_panel_album_img_iv" />


        <TextView
            android:id="@+id/home_panel_album_singer_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="젠(zen)"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_iv"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv"
            app:layout_constraintTop_toBottomOf="@id/home_panel_album_title_tv2" />


        <TextView
            android:id="@+id/home_panel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="잠이 안온다"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/home_panel_album_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_panel_album_img_iv1" />


        <TextView
            android:id="@+id/home_panel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="젠(zen)"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_iv1"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv1"
            app:layout_constraintTop_toBottomOf="@id/home_panel_album_title_tv" />

        <TextView
            android:id="@+id/home_panel_today_music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="오늘 발매 음악"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/home_panel_album_img_iv"
            app:layout_constraintTop_toBottomOf="@id/home_panel_background_iv" />

        <TextView
            android:id="@+id/tv_sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textColor="#ACACAC"
            app:layout_constraintTop_toTopOf="@id/home_panel_today_music_tv"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:layout_marginEnd="20dp"
            android:textColor="#ACACAC"
            app:layout_constraintEnd_toStartOf="@id/tv_sub1"
            app:layout_constraintTop_toTopOf="@id/tv_sub1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:layout_marginEnd="20dp"
            android:textColor="#6057C7"
            app:layout_constraintEnd_toStartOf="@id/tv_sub2"
            app:layout_constraintTop_toTopOf="@id/tv_sub2"/>
        <ImageButton
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintBottom_toBottomOf="@id/home_panel_today_music_tv"
            app:layout_constraintStart_toEndOf="@id/home_panel_today_music_tv"
            app:layout_constraintTop_toTopOf="@id/home_panel_today_music_tv" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_panel_today_music_tv">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_const_hor"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:fadeScrollbars="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_panel_today_music_tv">

                <ImageView
                    android:id="@+id/iv_album1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/lilac"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layout_const_hor" />
                <TextView
                    android:id="@+id/tv_album_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LILAC"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/iv_album1"
                    app:layout_constraintTop_toBottomOf="@id/iv_album1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU)"
                    android:textColor="#ACACAC"
                    app:layout_constraintStart_toStartOf="@id/iv_album1"
                    app:layout_constraintTop_toBottomOf="@id/tv_album_name1"/>



                <ImageView
                    android:id="@+id/iv_album2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/lilac"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/iv_album1"
                    app:layout_constraintTop_toTopOf="@id/layout_const_hor" />
                <TextView
                    android:id="@+id/tv_album_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LILAC"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/iv_album2"
                    app:layout_constraintTop_toBottomOf="@id/iv_album2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU)"
                    android:textColor="#ACACAC"
                    app:layout_constraintStart_toStartOf="@id/iv_album2"
                    app:layout_constraintTop_toBottomOf="@id/tv_album_name2"/>


                <ImageView
                    android:id="@+id/iv_album3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/lilac"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/iv_album2"
                    app:layout_constraintTop_toTopOf="@id/layout_const_hor" />
                <TextView
                    android:id="@+id/tv_album_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LILAC"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/iv_album3"
                    app:layout_constraintTop_toBottomOf="@id/iv_album3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU)"
                    android:textColor="#ACACAC"
                    app:layout_constraintStart_toStartOf="@id/iv_album3"
                    app:layout_constraintTop_toBottomOf="@id/tv_album_name3"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>